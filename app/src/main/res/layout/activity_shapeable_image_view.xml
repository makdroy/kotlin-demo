<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".image.ShapeableImageViewActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgRoundedCornerTopLeft"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_default"
        android:contentDescription="@string/desc_coil_rounded_corner_image"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_cross_fade_2"
        app:shapeAppearanceOverlay="@style/RoundedImageLeftTop"
        app:strokeColor="#0FBEFB"
        app:strokeWidth="5dp" />

</LinearLayout>
