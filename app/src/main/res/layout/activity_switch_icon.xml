<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_default"
    tools:context=".toggle.SwitchIconActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:text="@string/txt_switch_icon_description"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/txt_switch_icon_properties" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_default"
        android:background="#F6F6E6"
        android:orientation="horizontal"
        android:padding="@dimen/padding_default">

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/toggleSpeaker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            app:si_animation_duration="250"
            app:si_disabled_alpha=".3"
            app:si_disabled_color="#b7b7b7"
            app:si_enabled="false"
            app:si_no_dash="false"
            app:si_tint_color="@color/colorAccent"
            app:srcCompat="@drawable/ic_speaker_small" />

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/toggleIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/margin_large"
            android:padding="8dp"
            app:si_animation_duration="250"
            app:si_disabled_alpha=".3"
            app:si_disabled_color="#b7b7b7"
            app:si_enabled="false"
            app:si_no_dash="true"
            app:si_tint_color="#ff3c00"
            app:srcCompat="@drawable/ic_launcher_v24" />

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/toggleCheck"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/margin_large"
            android:background="@android:color/white"
            android:padding="8dp"
            app:si_animation_duration="150"
            app:si_disabled_color="@android:color/transparent"
            app:si_enabled="false"
            app:si_no_dash="true"
            app:si_tint_color="#00a050"
            app:srcCompat="@drawable/ic_check" />

    </LinearLayout>

</LinearLayout>
